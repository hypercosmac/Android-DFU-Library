<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/daylight_logo_vector_animated">
    
    <!-- Large L/D shape animation (appears first) -->
    <target android:name="largeShape">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="40"
                    android:propertyName="scaleX"
                    android:valueFrom="0.0"
                    android:valueTo=".50"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
                <objectAnimator
                    android:duration="40"
                    android:propertyName="scaleY"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="largePath">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="40"
                android:propertyName="alpha"
                android:valueFrom="0.0"
                android:valueTo=".50"
                android:valueType="floatType"/>
        </aapt:attr>
    </target>
    
    <!-- Medium quarter-circle animation (appears second) -->
    <target android:name="mediumShape">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="40"
                    android:startOffset="20"
                    android:propertyName="scaleX"
                    android:valueFrom="0.0"
                    android:valueTo=".50"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
                <objectAnimator
                    android:duration="40"
                    android:startOffset="20"
                    android:propertyName="scaleY"
                    android:valueFrom="0.0"
                    android:valueTo=".50"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="mediumPath">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="40"
                android:startOffset="20"
                android:propertyName="alpha"
                android:valueFrom="0.0"
                android:valueTo=".50"
                android:valueType="floatType"/>
        </aapt:attr>
    </target>
    
    <!-- Small circle animation (appears third) -->
    <target android:name="smallShape">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="40"
                    android:startOffset="40"
                    android:propertyName="scaleX"
                    android:valueFrom="0.0"
                    android:valueTo=".50"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
                <objectAnimator
                    android:duration="40"
                    android:startOffset="40"
                    android:propertyName="scaleY"
                    android:valueFrom="0.0"
                    android:valueTo=".50"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="circlePath">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="40"
                android:startOffset="40"
                android:propertyName="alpha"
                android:valueFrom="0.0"
                android:valueTo=".50"
                android:valueType="floatType"/>
        </aapt:attr>
    </target>
</animated-vector>

